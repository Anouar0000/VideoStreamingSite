                <li class="nav-item mx-1">
                    <a class="nav-link" href="/login"><i class="fas fa-fw fa-user-circle"></i> &nbsp; Login</a>
                </li>

                <li class="nav-item mx-1">
                    <a class="nav-link" href="/register"><i class="fas fa-fw fa-user"></i> &nbsp; Register</a>
